{
  "name": "mkdist",
  "version": "1.2.0",
  "description": "Lightweight file-to-file transformer",
  "repository": "unjs/mkdist",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "mkdist": "./dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "pnpm mkdist test/fixture -d",
    "lint": "eslint --ext .ts,.mjs,.cjs . && prettier --check src test",
    "lint:fix": "eslint --fix --ext .ts,.mjs,.cjs . && prettier --write -c src test",
    "mkdist": "jiti src/cli",
    "release": "pnpm test && pnpm build && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "defu": "^6.1.2",
    "esbuild": "^0.17.18",
    "fs-extra": "^11.1.1",
    "globby": "^13.1.4",
    "jiti": "^1.18.2",
    "mlly": "^1.2.0",
    "mri": "^1.2.0",
    "pathe": "^1.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/mri": "^1.1.1",
    "@types/node": "^18.16.3",
    "@vitest/coverage-c8": "^0.30.1",
    "c8": "latest",
    "changelogen": "^0.5.3",
    "eslint": "^8.39.0",
    "eslint-config-unjs": "^0.1.0",
    "modern-normalize": "^1.1.0",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1",
    "vitest": "^0.30.1"
  },
  "peerDependencies": {
    "sass": "^1.62.1",
    "typescript": ">=5.0.4"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "packageManager": "pnpm@8.3.1"
}
