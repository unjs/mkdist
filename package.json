{
  "name": "mkdist",
  "version": "1.4.0",
  "description": "Lightweight file-to-file transformer",
  "repository": "unjs/mkdist",
  "license": "MIT",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "mkdist": "./dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "pnpm mkdist test/fixture -d",
    "lint": "eslint --ext .ts,.mjs,.cjs . && prettier --check src test",
    "lint:fix": "eslint --fix --ext .ts,.mjs,.cjs . && prettier --write -c src test",
    "mkdist": "jiti src/cli",
    "release": "pnpm test && pnpm build && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "citty": "^0.1.6",
    "cssnano": "^7.0.0",
    "defu": "^6.1.4",
    "esbuild": "^0.20.2",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.1",
    "jiti": "^1.21.0",
    "mlly": "^1.6.1",
    "mri": "^1.2.0",
    "pathe": "^1.1.2",
    "postcss": "^8.4.38",
    "postcss-nested": "^6.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mri": "^1.2.0",
    "@types/node": "^20.12.7",
    "@vitest/coverage-v8": "^1.5.2",
    "c8": "latest",
    "changelogen": "^0.5.5",
    "eslint": "^8.57.0",
    "eslint-config-unjs": "^0.2.1",
    "modern-normalize": "^2.0.0",
    "prettier": "^3.2.5",
    "sass": "^1.75.0",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vue": "^3.4.25",
    "vue-tsc": "^1.8.27",
    "vitest": "^1.5.2"
  },
  "peerDependencies": {
    "sass": "^1.75.0",
    "typescript": ">=5.4.5",
    "vue-tsc": "^1.8.27"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "vue-tsc": {
      "optional": true
    }
  },
  "packageManager": "pnpm@8.15.7"
}
