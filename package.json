{
  "name": "mkdist",
  "version": "2.4.1",
  "description": "Lightweight file-to-file transformer",
  "repository": "unjs/mkdist",
  "license": "MIT",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "mkdist": "./dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "pnpm mkdist test/fixture -d",
    "lint": "eslint . && prettier --check src test",
    "lint:fix": "eslint --fix . && prettier --write -c src test",
    "mkdist": "jiti src/cli",
    "release": "pnpm test && pnpm build && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "autoprefixer": "^10.4.22",
    "citty": "^0.1.6",
    "cssnano": "^7.1.2",
    "defu": "^6.1.4",
    "esbuild": "^0.27.0",
    "jiti": "^1.21.7",
    "mlly": "^1.8.0",
    "pathe": "^2.0.3",
    "pkg-types": "^2.3.0",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "semver": "^7.7.3",
    "tinyglobby": "^0.2.15"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@volar/typescript": "^2.4.26",
    "@vue/language-core": "^3.1.5",
    "@vue/language-core2.0": "npm:@vue/language-core@2.0.29",
    "c8": "latest",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.1",
    "eslint-config-unjs": "^0.5.0",
    "modern-normalize": "^3.0.1",
    "prettier": "^3.7.1",
    "sass": "^1.94.2",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.14",
    "vue": "^3.5.25",
    "vue-sfc-transformer": "^0.1.17",
    "vue-tsc": "^3.1.5",
    "vue-tsc1": "npm:vue-tsc@^1.8.27",
    "vue-tsc2.0": "npm:vue-tsc@2.0.29"
  },
  "peerDependencies": {
    "sass": "^1.94.2",
    "typescript": ">=5.9.3",
    "vue": "^3.5.25",
    "vue-sfc-transformer": "^0.1.17",
    "vue-tsc": "^1.8.27 || ^2.0.21 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "vue-sfc-transformer": {
      "optional": true
    },
    "vue-tsc": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.23.0"
}
