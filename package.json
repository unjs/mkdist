{
  "name": "mkdist",
  "version": "2.3.0",
  "description": "Lightweight file-to-file transformer",
  "repository": "unjs/mkdist",
  "license": "MIT",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "mkdist": "./dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "pnpm mkdist test/fixture -d",
    "lint": "eslint . && prettier --check src test",
    "lint:fix": "eslint --fix . && prettier --write -c src test",
    "mkdist": "jiti src/cli",
    "release": "pnpm test && pnpm build && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "citty": "^0.1.6",
    "cssnano": "^7.0.6",
    "defu": "^6.1.4",
    "esbuild": "^0.25.2",
    "jiti": "^1.21.7",
    "mlly": "^1.7.4",
    "pathe": "^2.0.3",
    "pkg-types": "^2.1.0",
    "postcss": "^8.5.3",
    "postcss-nested": "^7.0.2",
    "semver": "^7.7.1",
    "tinyglobby": "^0.2.12"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@types/semver": "^7.7.0",
    "@vitest/coverage-v8": "^3.1.1",
    "@volar/typescript": "^2.4.12",
    "@vue/language-core": "^2.2.8",
    "@vue/language-core2.0": "npm:@vue/language-core@2.0.29",
    "c8": "latest",
    "changelogen": "^0.6.1",
    "eslint": "^9.23.0",
    "eslint-config-unjs": "^0.4.2",
    "modern-normalize": "^3.0.1",
    "prettier": "^3.5.3",
    "sass": "^1.86.0",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vitest": "^3.1.1",
    "vue": "^3.5.13",
    "vue-sfc-transformer": "^0.1.2",
    "vue-tsc": "^2.2.8",
    "vue-tsc1": "npm:vue-tsc@^1.8.27",
    "vue-tsc2.0": "npm:vue-tsc@2.0.29"
  },
  "peerDependencies": {
    "sass": "^1.85.0",
    "typescript": ">=5.7.3",
    "vue": "^3.5.13",
    "vue-sfc-transformer": "^0.1.1",
    "vue-tsc": "^1.8.27 || ^2.0.21"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "vue-sfc-transformer": {
      "optional": true
    },
    "vue-tsc": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.7.0"
}
